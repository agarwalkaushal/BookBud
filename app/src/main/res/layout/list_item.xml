<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/List_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_main_activity"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="50dp"
    android:paddingTop="15dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:descendantFocusability="blocksDescendants">



        <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape1"
        android:elevation="200dp"
        android:listSelector="@color/colorAccent2"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="18dp"
        >

            <ImageView
                android:id="@+id/free1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:elevation="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:contentDescription="Free Tag" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="23dp"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <LinearLayout
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/contact_click"
                    android:clickable="true"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:src="@drawable/ic_person_black_48dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingLeft="6dp"
                        android:textColor="@color/colorAccent3"
                        android:textSize="18sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/coursecode"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingLeft="6dp"
                        android:textColor="@color/colorAccent3"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:paddingTop="18dp"
                    android:paddingRight="23dp"
                    android:src="@drawable/line"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="24dp"
                    android:src="@drawable/ic_book_black_48dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingTop="8dp"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorAccent3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorAccent3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorAccent3"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingLeft="6dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="5dp"
                    android:text="Edition :"
                    android:textColor="@color/colorAccent3"
                    android:textSize="15sp"
                    android:textStyle="italic|bold"
                    />

                <TextView
                    android:id="@+id/edition"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Not specified"
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorAccent3"
                    android:textSize="15sp"
                    android:textStyle="italic" />
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="6dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="5dp"
                    android:text="Publisher :"
                    android:textColor="@color/colorAccent3"
                    android:textSize="15sp"
                    android:textStyle="italic|bold"
                    />

                <TextView
                    android:id="@+id/publisher"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Not specified"
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorAccent3"
                    android:textSize="15sp"
                    android:textStyle="italic" />
                />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="6dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingLeft="6dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="5dp"
                    android:text="Description"
                    android:textColor="@color/colorAccent3"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="No content available"
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorAccent3"
                    android:textSize="15sp"
                    android:textStyle="italic" />
                />
        </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/button2"
            android:text="VIEW FRONT OF BOOK"
            android:textColor="@color/colorAccent6"
            android:layout_below="@id/background"
            android:layout_width="match_parent"
            android:elevation="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            tools:ignore="ObsoleteLayoutParam" />

</RelativeLayout>